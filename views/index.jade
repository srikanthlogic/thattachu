extends layout

block content
  div.row
    div#sidebar(class="col-sm-3 col-md-2 sidebar")
      ul.nav.nav-sidebar
        each i in [1,2,3,4,5]
          li
            a(href="#")= "Lesson "+ i
    div#instructions(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
      h2 Instructions
      p
        This space will be used for loading the instructions for that particular lesson
    div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
      block workspace
        include workspace.jade
